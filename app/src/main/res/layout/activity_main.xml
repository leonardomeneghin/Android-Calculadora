<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textExpressao"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="@+id/btnDivide"
        app:layout_constraintStart_toStartOf="@+id/btn1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textResultado"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="@+id/btnDivide"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btn1"
        app:layout_constraintTop_toBottomOf="@+id/textExpressao" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:backgroundTint="#FBFBFB"
        android:text="3"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@+id/btnDivide"
        app:layout_constraintStart_toEndOf="@+id/btn2"
        app:layout_constraintTop_toTopOf="@+id/btn1"
        app:rippleColor="#1C1111"
        />

    <Button
        android:id="@+id/btnPonto"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:backgroundTint="#FBFBFB"
        android:text="."
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/btn8"
        app:layout_constraintStart_toStartOf="@+id/btn8"
        app:layout_constraintTop_toTopOf="@+id/btn0"
        app:rippleColor="#1C1111"
        />

    <Button
        android:id="@+id/btn4"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="#FBFBFB"
        android:text="4"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/btn1"
        app:layout_constraintTop_toBottomOf="@+id/btn1"
        app:rippleColor="#1C1111"
        />

    <Button
        android:id="@+id/btn2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:backgroundTint="#FBFBFB"
        android:text="2"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@+id/btn3"
        app:layout_constraintStart_toEndOf="@+id/btn1"
        app:layout_constraintTop_toTopOf="@+id/btn1"
        app:rippleColor="#1C1111"
        />

    <Button
        android:id="@+id/btn1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:backgroundTint="#FBFBFB"
        android:text="1"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@+id/btn2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textResultado"
        app:rippleColor="#1C1111"
        />

    <Button
        android:id="@+id/btn8"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:backgroundTint="#FBFBFB"
        android:text="8"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/btn5"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/btn5"
        app:layout_constraintTop_toTopOf="@+id/btn7"
        app:rippleColor="#1C1111"
        />

    <Button
        android:id="@+id/btn7"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="#FBFBFB"
        android:text="7"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/btn4"
        app:layout_constraintStart_toStartOf="@+id/btn4"
        app:layout_constraintTop_toBottomOf="@+id/btn4"
        app:rippleColor="#1C1111"
        />

    <Button
        android:id="@+id/btn6"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:backgroundTint="#FBFBFB"
        android:text="6"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/btn3"
        app:layout_constraintStart_toStartOf="@+id/btn3"
        app:layout_constraintTop_toTopOf="@+id/btn4"
        app:rippleColor="#1C1111"
        />

    <Button
        android:id="@+id/btn5"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:backgroundTint="#FBFBFB"
        android:text="5"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/btn2"
        app:layout_constraintStart_toStartOf="@+id/btn2"
        app:layout_constraintTop_toTopOf="@+id/btn4"
        app:rippleColor="#1C1111"
        />

    <Button
        android:id="@+id/btn0"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="#FBFBFB"
        android:text="0"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/btn7"
        app:layout_constraintStart_toStartOf="@+id/btn7"
        app:layout_constraintTop_toBottomOf="@+id/btn7"
        app:rippleColor="#1C1111"
        />

    <Button
        android:id="@+id/btnC"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:backgroundTint="#FBFBFB"
        android:text="C"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/btn9"
        app:layout_constraintStart_toStartOf="@+id/btn9"
        app:layout_constraintTop_toTopOf="@+id/btn0"
        app:rippleColor="#1C1111"
        />

    <Button
        android:id="@+id/btn9"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:backgroundTint="#FBFBFB"
        android:text="9"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/btn6"
        app:layout_constraintStart_toStartOf="@+id/btn6"
        app:layout_constraintTop_toTopOf="@+id/btn7"
        app:rippleColor="#1C1111"
        />

    <Button
        android:id="@+id/btnMultiplica"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:backgroundTint="#FBFBFB"
        android:text="X"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/btnSubtrai"
        app:layout_constraintStart_toStartOf="@+id/btnSubtrai"
        app:layout_constraintTop_toTopOf="@+id/btn0"
        app:rippleColor="#1C1111"
        />

    <Button
        android:id="@+id/btnDivide"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="15dp"
        android:backgroundTint="#FBFBFB"
        android:text="âž—"
        android:textColor="@color/black"
        app:iconTint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn3"
        app:layout_constraintTop_toTopOf="@+id/btn1"
        app:rippleColor="#1C1111"
        />

    <Button
        android:id="@+id/btnSubtrai"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:backgroundTint="#FBFBFB"
        android:text="-"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/btnSoma"
        app:layout_constraintStart_toStartOf="@+id/btnSoma"
        app:layout_constraintTop_toTopOf="@+id/btn7"
        app:rippleColor="#1C1111"
        />

    <Button
        android:id="@+id/btnSoma"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:backgroundTint="#FBFBFB"
        android:text="+"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/btnDivide"
        app:layout_constraintStart_toStartOf="@+id/btnDivide"
        app:layout_constraintTop_toTopOf="@+id/btn4"
        app:rippleColor="#1C1111"
        />

    <Button
        android:id="@+id/btnIgual"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:backgroundTint="#FBFBFB"
        android:text="="
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@+id/btnDelete"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn0"
        app:rippleColor="#1C1111" />

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:backgroundTint="#FBFBFB"
        android:text="delete"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnIgual"
        app:layout_constraintTop_toTopOf="@+id/btnIgual"
        app:rippleColor="#1C1111" />

</androidx.constraintlayout.widget.ConstraintLayout>